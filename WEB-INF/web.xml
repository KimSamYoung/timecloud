<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	<display-name>Tomcat Default Web Application</display-name>
	<description>The default web application for JRun</description>
	<filter>
		<filter-name>Set Character Encoding</filter-name>
		<filter-class>filters.SetCharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>Set Character Encoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>Initialize</servlet-name>
		<display-name>Application Initialize Class</display-name>
		<description>Read XML File</description>
		<servlet-class>
			com.twobrain.common.init.Initialize
		</servlet-class>

		<init-param>
			<param-name>QueryXMLFile</param-name>
			<param-value>
				Activity.xml,
				Common.xml,
                Domain.xml,
				Feedback.xml,
				File.xml,
				Kpi.xml,
				Observer.xml,
				Project.xml,				
				SocialHub.xml,
				Task.xml,
                Team.xml,
				Test.xml,
                User.xml
			</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<error-page>
		<error-code>401</error-code>
		<location>/jsp/error/401.jsp</location>
	</error-page>

	<error-page>
		<error-code>404</error-code>
		<location>/jsp/error/404.jsp</location>
	</error-page>

	<error-page>
		<error-code>500</error-code>
		<location>/jsp/error/500.jsp</location>
	</error-page>

	<session-config>
		<session-timeout>60</session-timeout>
	</session-config>

</web-app>
